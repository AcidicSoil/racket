(require picturing-programs)

(define (a-with-b str)
  str)

(define (add-b-end str)
  (beside
   str
   (text "b" 18 "green")))

(define (chop-first-on-mouse first-char mouse-x mouse-y event)
  (substring first-char 1))

(big-bang (text "a" 18 "green") 
  (on-tick add-b-end 1)
  (on-draw a-with-b 100 100)
  (on-mouse chop-first-on-mouse))
